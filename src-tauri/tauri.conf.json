{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Discover",
  "version": "0.1.0",
  "identifier": "com.emnavidiscover.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "emNaviDiscover",
        "width": 800,
        "height": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/discover/icon.ico",
      "icons/discover/icon.icns",
      "icons/discover/32x32.png",
      "icons/discover/128x128.png",
      "icons/discover/128x128@2x.png"
    ]
  }
}
